<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Responsive Admin Dashboard Template">
  <meta name="keywords" content="admin,dashboard">
  <meta name="author" content="stacks">
  <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->

  <!-- Title -->
  <title>Connect - Responsive Admin Dashboard Template</title>

  <!-- Styles -->
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
  <link href="/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/plugins/font-awesome/css/all.min.css" rel="stylesheet">
  <link href="/plugins/DataTables/datatables.min.css" rel="stylesheet">


  <!-- Theme Styles -->
  <link href="/css/connect.min.css" rel="stylesheet">
  <link href="/css/admin3.css" rel="stylesheet">
  <link href="/css/dark_theme.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
<div class='loader'>
  <div class='spinner-grow text-primary' role='status'>
    <span class='sr-only'>Loading...</span>
  </div>
</div>
<div class="connect-container align-content-stretch d-flex flex-wrap">
  <% include partials/sidebar.ejs %>
  <div class="page-container">
      <% include partials/header.ejs %>
    <div class="page-content">
      <div class="page-info">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Apps</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
          </ol>
        </nav>
        <div class="page-options">
          <a href="#" class="btn btn-secondary">Settings</a>
          <a href="#" class="btn btn-primary">Upgrade</a>
        </div>
      </div>
      <div class="main-wrapper">
        <form action="/start" method="post">

        <div class="row stats-row">
          <div class="col-lg-4 col-md-12">
            <div class="card card-transparent stats-card">
              <div class="card-body">
                <div class="stats-info">
                    <div class="form-group">
                      <label for="title">Project</label>
                      <select class="form-control custom-select" name="project" id="project">
                        <option selected disabled value="">Select project...</option>
                          <% if(projects){%>
                        <% projects.forEach(function (p) { %>
                        <option  value="<%= p.title %>"><%= p.title %></option>
                        <% })} %>
                      </select>
                    </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-12">
            <div class="card card-transparent stats-card">
              <div class="card-body">
                <div class="stats-info">
                  <div class="form-group">
                    <label for="comment">Comment:</label>
                    <input type="text" class="form-control" id="comment" name="comment">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-12">
            <div class="card card-transparent stats-card">
              <div class="card-body">
                <div class="stats-info">
                  <label for="status">Action:</label>
                  <p>
                    <% if (act) {%>
                    <button disabled type="submit" value="active" name="status" class="btn btn-primary">Start</button>
                    <button type="submit" value="finished" name="status" class="btn btn-primary">Finish</button>
                      <% } else { %>
                    <button type="submit" value="active" name="status" class="btn btn-primary">Start</button>
                    <button disabled type="submit" value="finished" name="status" class="btn btn-primary">Finish</button>
                      <% } %>
                  </p>

                </div>
              </div>
            </div>
          </div>

        </div>
        </form>
        <div class="row">
          <div class="col-lg">
            <div class="card">
              <div class="card-body">

                <table id="zero-conf" class="display" style="width:100%">
                  <thead>
                  <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Difference</th>
                    <th>Project</th>
                    <th>Status</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% if(data) { %>
                  <% data.forEach(function (p) { %>
                  <tr>
                    <td><%= moment(p.started).format("DD/MM");%></td>
                    <td><%= moment(p.started).format("h:mm ");%> - <%= moment(p.finished).format("h:mm a");%></td>
                    <td><%= moment(p.finished).diff(moment(p.started), 'minutes');%> min</td>
                    <td>
                      <span type="button"  data-toggle="tooltip" data-placement="top" title="<%= p.comment %>">
                          <%= p.project %>
                      </span>
                    </td>
                    <td><%= p.status %></td>
                  </tr>
                  <% })} %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Difference</th>
                    <th>Project</th>
                    <th>Status</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Column Chart</h5>
                <div id="apex3"></div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="page-footer">
      <div class="row">
        <div class="col-md-12">
          <span class="footer-text">2019 Â© stacks</span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Javascripts -->
<script src="/plugins/jquery/jquery-3.4.1.min.js"></script>
<script src="/plugins/bootstrap/popper.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
